        <li><a href="{{path ('signup')}}"><span class="glyphicon glyphicon-user"></span>Sign up</a>
          
        </li>
       {% endif %} 



      </ul> 
            </div>
        </div>
    </nav>


<div class="container">

      

        <!-- Project One -->
